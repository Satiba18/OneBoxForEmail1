{
  "info": {
    "name": "ReachInbox Onebox API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": { "method": "GET", "url": "http://localhost:4000/api/health" }
    },
    {
      "name": "Search Emails",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:4000/api/emails?query=demo",
          "host": ["http://localhost:4000"],
          "path": ["api","emails"],
          "query": [{"key":"query","value":"demo"}]
        }
      }
    },
    {
      "name": "Get Email",
      "request": { "method": "GET", "url": "http://localhost:4000/api/emails/:id" }
    },
    {
      "name": "Categorize Email",
      "request": {
        "method": "POST",
        "url": "http://localhost:4000/api/emails/:id/categorize"
      }
    },
    {
      "name": "Mark Email Category",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\n  \"category\": \"Interested\"\n}"},
        "url": "http://localhost:4000/api/emails/:id/mark"
      }
    },
    {
      "name": "Suggest Reply",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "body": {"mode":"raw","raw":"{\n  \"emailId\": \"<put-email-id>\",\n  \"tone\": \"friendly\",\n  \"maxTokens\": 200\n}"},
        "url": "http://localhost:4000/api/replies/suggest"
      }
    },
    {
      "name": "Test Webhook",
      "request": {
        "method": "POST",
        "url": "http://localhost:4000/api/test/webhook"
      }
    }
  ]
}
